<%- if flash[:error] -%>
  <p class="error"><%= h(flash[:error]) %>
<%- end -%>
<p>Settings used in this session.</p>
<%- form_tag({:action => 'update'}, {:name => 'post'}) do -%>
  <p>
    font size: <%= text_field_tag('font_size', @font_size) %><br/>
    entries in page: <%= text_field_tag('entries_in_page', @entries_in_page) %><br/>
    entries in thread: <%= text_field_tag('entries_in_thread', @entries_in_thread) %><br/>
    text folding size: <%= text_field_tag('text_folding_size', @text_folding_size) %><br/>
    show medias in list view: <%= check_box_tag('list_view_media_rendering', 'checked', @list_view_media_rendering) %><br/>
    open links in new window: <%= check_box_tag('link_open_new_window', 'checked', @link_open_new_window) %><br/>
    open links via mobile proxy(gwt): <%= check_box_tag('link_type_gwt', 'checked', @link_type == 'gwt') %><br/>
    <%= submit_tag 'update' %>
  </p>
<%- end -%>
